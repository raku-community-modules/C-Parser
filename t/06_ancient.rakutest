use Test;

use C::AST;
use C::Parser;

plan 1;

our $source = q<<<
    int printf(const char *, ...);
    
    int main(argc, argv)
        int argc; char * argv[];
    {
        printf("Hello %s!", argv[1]);
        return 0;
    }
>>>;

{
    my $match = C::Parser.parse($source);
    isa-ok($match, C::AST::TransUnit, 'gives a C::AST::TransUnit');
}

